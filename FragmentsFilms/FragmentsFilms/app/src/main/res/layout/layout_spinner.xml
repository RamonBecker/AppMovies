<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="85dp"
        android:text="Cadastro de Filme"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerAtor"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/spinnerAtor"
        android:layout_width="253dp"
        android:layout_height="40dp"
        android:layout_gravity="center"

        android:layout_marginEnd="23dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerDiretor"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="61dp"
        android:layout_height="19dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="43dp"
        android:text="Atores:"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinnerDiretor"
        android:layout_width="253dp"
        android:layout_height="44dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="35dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextRegisterNameFilm"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="54dp"
        android:layout_height="29dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="58dp"
        android:text="Diretor"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="34dp"
        android:text="Nome do filme:"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginBottom="65dp"
        android:text="Genero:"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="139dp"
        android:text="Ano de lançamento:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextRegisterNameFilm"
        android:layout_width="263dp"
        android:layout_height="43dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="26dp"
        android:ems="10"
        android:hint="Digite o nome do filme"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/editTextRegisterGenero"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextRegisterGenero"
        android:layout_width="265dp"
        android:layout_height="42dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="23dp"
        android:ems="10"
        android:hint="Digite o genero do filme"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/editTextRegisterDate"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextRegisterDate"
        android:layout_width="260dp"
        android:layout_height="41dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="42dp"
        android:ems="10"
        android:hint="Selecione a data de lançamento"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/buttonRegisterFilm"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonRegisterFilm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="46dp"
        android:text="Cadastrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>