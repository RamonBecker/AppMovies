            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewFilm"
                android:layout_width="427dp"
                android:layout_height="166dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/textViewTituloFilme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titulo do filme" />

            <TextView
                android:id="@+id/textViewAnoLancamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ano de lanÃ§amento" />

            <TextView
                android:id="@+id/textViewGenero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Genero" />

            <TextView
                android:id="@+id/textViewDiretor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diretor" />

            <TextView
                android:id="@+id/textViewProtagonista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Protagonista" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>